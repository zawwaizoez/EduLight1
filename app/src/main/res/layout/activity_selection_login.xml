<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionLogin"
    android:background="@color/colorWhite"
    >
    <LinearLayout
        android:id="@+id/selection_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="EduLignt"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/selection_text_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Learn bits of IT with Teachers"
                android:textColor="@color/colorBlackDark"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/selection_text_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="passion for learning"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/signup_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="45dp"
            android:layout_centerInParent="true"
            >
            <Button
                android:id="@+id/user_google_signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up with Google"
                android:inputType="textCapWords"
                android:textSize="16dp"
                android:drawablePadding="5dp"
                android:paddingLeft="50dp"
                android:layout_marginTop="10dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="20dp"
                android:elevation="8dp"
                android:textColor="@color/colorSelectionLoginBtnText"
                android:drawableLeft="@drawable/ic_selection_login_google_24px"
                android:background="@drawable/login_selection_btn_background"
                />
            <Button
                android:id="@+id/user_facebook_signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up with Faceboook"
                android:inputType="textCapWords"
                android:textSize="16dp"
                android:drawablePadding="5dp"
                android:paddingLeft="50dp"
                android:layout_marginTop="10dp"
                android:paddingRight="50dp"
                android:paddingTop="12dp"
                android:paddingBottom="20dp"
                android:elevation="8dp"
                android:textColor="@color/colorSelectionLoginBtnText"
                android:drawableLeft="@drawable/ic_selection_login_facebook_24px"
                android:background="@drawable/login_selection_btn_background"
                />
            <Button
                android:id="@+id/user_gmail_signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textSize="16dp"
                android:text="Sign up with Gmail"
                android:drawablePadding="5dp"
                android:paddingLeft="50dp"
                android:elevation="8dp"
                android:layout_marginTop="10dp"
                android:paddingRight="50dp"
                android:background="@drawable/login_selection_btn_background"
                android:paddingTop="12dp"
                android:paddingBottom="20dp"
                android:textColor="@color/colorSelectionLoginBtnText"
                android:drawableLeft="@drawable/ic_selection_login_gmail_24px"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/selection_text_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:text="Already have an account?"
                    />
                <TextView
                    android:id="@+id/selection_text_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:text=" Sign in"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/selection_term_service_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/selection_text_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By creating an account, I accept EduLight's"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/selection_text_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Terms of Service"
            android:textSize="15sp"
            android:textColor="@android:color/darker_gray"
            />
    </LinearLayout>
</RelativeLayout>