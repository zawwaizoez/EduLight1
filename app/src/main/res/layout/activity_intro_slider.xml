<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroSlider">
    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_slider_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        />
    <LinearLayout
        android:id="@+id/slider_dots_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_dots_layout_height"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center"
        />
    <Button
        android:id="@+id/slider_skip_btn"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      ht="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="@string/slider_skip_btn_text"
        android:textColor="@color/colorWhite"
        android:inputType="textCapWords"
        android:background="@android:color/transparent"
        />
    <Button
        android:id="@+id/slider_continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/slider_continue_btn_text"
        android:textColor="@android:color/white"
        android:inputType="textCapWords"
        android:layout_marginBottom="@dimen/slider_continue_btn_marginbot"
        android:background="@drawable/slider_continue_btn_background"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        />
</RelativeLayout>