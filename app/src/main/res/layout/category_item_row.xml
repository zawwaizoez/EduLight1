<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/colorWhite"
    >
    <ImageView
        android:id="@+id/category_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/category_database_icon"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/category_item_icon"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/category_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Database Management System"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/category_item_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U Tin Myint Naing"
            android:textSize="16sp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/category_item_forward_icon"
        android:src="@drawable/ic_category_item_forward_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>